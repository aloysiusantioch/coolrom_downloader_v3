	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
16)
	VG="Sega Game Gear"
	VG_URL="gamegear"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
17)
	VG="Sega Genesis"
	VG_URL="genesis"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
18)
	VG="Sega Master System"
	VG_URL="mastersystem"
	BUSCA_LETRA
