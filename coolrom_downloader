	VG="Namco System 22"
	VG_URL="namcosystem22"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
11)
	VG="Neo Geo"
	VG_URL="neogeo"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
12)
	VG="Neo Geo CD"
	VG_URL="neogeocd"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
13)
	VG="Neo Geo Pocket"
	VG_URL="neogeopocket"
	BUSCA_LETRA
	LISTA_JOGOS
	BAIXA_ROM
	;;
14)
	VG="Sega CD"
	VG_URL="segacd"
	BUSCA_LETRA
	LISTA_JOGOS
